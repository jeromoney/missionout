<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <!-- Inside the layout tag it is possible to set the data tag in order to set one or many variables. For this example we are having an User property-->
    <data>
        <variable
            name="missionInstance"
            type="com.beaterboofs.missionout.Mission"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@{missionInstance.description}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Name" />

        <TextView
            android:id="@+id/need_for_action_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/description_text_view"
            android:padding="16dp"
            android:text="@{missionInstance.needForAction}"
            tools:text="XX" />

        <TextView
            android:id="@+id/location_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/need_for_action_text_view"
            android:padding="16dp"
            android:text="@{missionInstance.locationDescription}"
            tools:text="XX"
            />

        <TextView
            android:id="@+id/location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/location_description_text_view"
            android:padding="16dp"
            android:text="@{missionInstance.location.toString()}"
            tools:text="XX"
            />

        <TextView
            android:id="@+id/time_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/location_text_view"
            android:padding="16dp"
            android:text="@{missionInstance.time.toString()}"
            tools:text="XX"
            />
        <androidx.appcompat.widget.AppCompatSpinner
            app:layout_constraintTop_toBottomOf="@id/time_text_view"
            android:id="@+id/responding_spinner"
            android:autofillHints="@string/responding"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/response_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/responding_spinner"
            android:padding="16dp"
            android:text="@{missionInstance.responseMap.toString()}"
            tools:text="XX"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/alarm_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm" />



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>